@model LoginVM

<div class="container pt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-success bg-gradient text-white rounded-top-4 py-4">
            <h2 class="text-center mb-0">Login</h2>
        </div>
        <div class="card-body p-5">
            <form method="post">
                <input asp-for="RedirectUrl" type="hidden" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-4 position-relative">
                    <input asp-for="Email" class="form-control rounded-pill ps-5 py-3" aria-required="true" placeholder="Email" />
                    <span class="position-absolute top-50 translate-middle-y ps-3 text-muted">
                        <i class="bi bi-envelope"></i>
                    </span>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-4 position-relative">
                    <input asp-for="Password" type="password" class="form-control rounded-pill ps-5 py-3" aria-required="true" placeholder="Password" />
                    <span class="position-absolute top-50 translate-middle-y ps-3 text-muted">
                        <i class="bi bi-lock"></i>
                    </span>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="form-check form-switch mb-4">
                    <input class="form-check-input" asp-for="RememberMe" type="checkbox" role="switch" />
                    <label class="form-check-label" for="RememberMe">Remember Me</label>
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-success btn-lg rounded-pill">Log in</button>
                </div>

                <div class="d-flex justify-content-between small">
                    <a asp-action="ForgotPassword">Forgot your password?</a>
                    <a asp-action="Register" asp-route-returnUrl="@Model.RedirectUrl">Register as a new user</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}